# DealScope Environment Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=DealScope
APP_VERSION=1.0.0
DEBUG=true

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dealscope

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# RentCast API
# Get your key at: https://app.rentcast.io/app/api
RENTCAST_API_KEY=your_rentcast_api_key_here
RENTCAST_URL=https://api.rentcast.io/v1

# AXESSO API (Zillow data)
# Get your key at: https://axesso.developer.azure-api.net
AXESSO_API_KEY=your_axesso_api_key_here
AXESSO_URL=https://api.axesso.de/zil

# JWT Security (generate with: openssl rand -hex 32)
SECRET_KEY=change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (add your frontend URLs)
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
